surface disk (color baseColour=1,
              color spotColour=0,
              float fuzz=0.025,
              float repeatU=1,
              float repeatV=1,
              output color Cout=0)
{
   
    float dist;
    float inDisk;
    float ss=mod(u*repeatU,1);
    float tt=mod(v*repeatV,1);
    Cout=baseColour;

    dist=sqrt((ss-0.5)*(ss-0.5)+(tt-0.5)*(tt-0.5));
    inDisk=1-smoothstep(0.3-fuzz,0.3+fuzz,dist);
    Cout=mix(Cout,spotColour,inDisk);
}

